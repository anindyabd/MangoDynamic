<% provide(:title, "Our Blog") %>
<div class="page-content">
  <div class="container">
    <div class="blog">
      <% @posts.each do |post| %>
      <div class="row padd20-top-btm">
        <div class = "col-md-offset-3 col-md-6">
          <h2><%= link_to post.title, post_path(post) %></h2>
          <p><%= simple_format(post.content) %></p>
        </div>
      </div>
      <% end %>
      <br>
    </div>
  </div>
</div>
