<div class="page-content">
  <div class="container">
    <div class="row">
      <div class="col-md-12 t-center">
        <h1> Listing Profiles </h1>
        <table>
          <% @profiles.each do |profile| %>
            <tr>
              <td class="list_description">
                <dl>
                  <dt> <%= profile.id %> </dt>
                  <dd><%= profile.user_id %></dd>
                </dl>
              </td>
              <td class = "list_actions">
                <%= link_to 'Show', profile %><br/>
                <%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %><br/>
              </td>
            </tr>
          <% end %>
        </table>
      <br>
      
    </div>
  </div>
  </div>
</div>